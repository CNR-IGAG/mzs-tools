{
  "files.associations": {
    "./requirements/*.txt": "pip-requirements",
    "metadata.txt": "ini",
    "**/*.model3": "xml",
    "**/*.ts": "xml",
    "**/*.ui": "xml"
  },
  "editor.defaultFormatter": "charliermarsh.ruff",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  // Python
  "python.analysis.autoFormatStrings": false, // breaking PyQt translation
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticSeverityOverrides": {
      "reportOptionalMemberAccess": "none"  // Disable warning for optional member access
  },
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": true,
  "[python]": {
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
        "source.organizeImports":"explicit"
    },
  },
  "esbonio.sphinx.confDir": "${workspaceFolder}/help/source",
  "makefile.configureOnOpen": false,
  "rewrap.wrappingColumn": 119,
  "rewrap.autoWrap.enabled": true,
  "[markdown]": {
    "rewrap.autoWrap.enabled": false,
  },
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true
}
